<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_popup_editprofile"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_ruler_picker"
        android:gravity="center"
        android:text="60"
        android:textSize="24sp"
        android:layout_marginTop="20dp" />

    <com.telyu.nourimate.custom.CurvedRulerView
        android:id="@+id/curvedRulerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/textViewNumber"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_below="@id/curvedRulerView"
        android:layout_marginTop="20dp" />

</RelativeLayout>
