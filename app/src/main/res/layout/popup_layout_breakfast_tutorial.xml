<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rectangletitlesetbreakfast"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rectangle_selected_meal_with_shadow"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popupTitleSetBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/zenkakugothicnewbold"
        android:elevation="6dp"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@+id/rectangletitlesetbreakfast"
        app:layout_constraintTop_toTopOf="@+id/rectangletitlesetbreakfast"
        app:layout_constraintBottom_toBottomOf="@+id/rectangletitlesetbreakfast"/>

    <TextView
        android:id="@+id/textViewBasketSetBreakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_basket"
        android:text="2"
        android:textSize="15dp"
        android:elevation="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:fontFamily="@font/zenkakugothicnewbold"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/popupTitleSetBreakfast"
        app:layout_constraintBottom_toBottomOf="@+id/popupTitleSetBreakfast"
        app:layout_constraintEnd_toEndOf="@+id/popupTitleSetBreakfast"/>


    <ImageView
        android:id="@+id/rectangleselectedsetbreakfast"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_selected_meal_2_with_shadow"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangletitlesetbreakfast" />




</androidx.constraintlayout.widget.ConstraintLayout>
