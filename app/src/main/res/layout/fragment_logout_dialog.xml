<!-- res/layout/custom_logout_dialog.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_popup_change_password"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logoutimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logoutimage" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/abel"
        android:textStyle="bold"
        android:text="Are you sure you want to logout?"
        app:layout_constraintTop_toBottomOf="@+id/logoutimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/buttonCancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="No, Thanks"
        android:textStyle="bold"
        android:background="@drawable/button_change_password"
        android:elevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/zenkakugothicnewbold"
        android:layout_marginTop="25dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@+id/textViewMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/buttonLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yes, I'm Sorry"
        android:textStyle="bold"
        android:elevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/color2"
        android:textSize="16sp"
        android:fontFamily="@font/zenkakugothicnewbold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- Add other UI elements if needed -->
</androidx.constraintlayout.widget.ConstraintLayout>
