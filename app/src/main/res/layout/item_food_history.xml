<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_menu_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/viewCircleBackground"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/circle_shape_menu_history"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground"
        app:layout_constraintTop_toTopOf="@+id/viewBackground"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textColor="@color/black"
        android:fontFamily="@font/barlowcondensedsemibold"
        android:textSize="18dp"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintEnd_toStartOf="@+id/viewCircleBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp" />

    <ImageView
        android:id="@+id/iv_recipe"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/viewCircleBackground"
        app:layout_constraintBottom_toBottomOf="@+id/viewCircleBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewCircleBackground"
        app:layout_constraintTop_toTopOf="@+id/viewCircleBackground"/>

    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories"
        android:fontFamily="@font/alumnisans"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/viewBackground"/>

    <TextView
        android:id="@+id/tv_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="protein"
        android:fontFamily="@font/alumnisans"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_calories"
        app:layout_constraintStart_toStartOf="@id/viewBackground"/>

    <TextView
        android:id="@+id/tv_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="carbs"
        android:fontFamily="@font/alumnisans"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_protein"
        app:layout_constraintStart_toStartOf="@id/viewBackground"/>

    <TextView
        android:id="@+id/tv_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fat"
        android:fontFamily="@font/alumnisans"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_carbs"
        app:layout_constraintStart_toStartOf="@id/viewBackground"/>


</androidx.constraintlayout.widget.ConstraintLayout>