<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.telyu.nourimate.RecipeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recipeGreetingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, username!"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/concertone"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/recipeAskTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to cook something?"
                android:textSize="22sp"
                android:fontFamily="@font/alumnisans"
                app:layout_constraintTop_toBottomOf="@+id/recipeGreetingTextView"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:id="@+id/recipeProfileImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="30dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onweeklyClicked"
                android:layout_marginTop="30dp"
                android:text="Weekly"
                android:fontFamily="@font/alumnisans"
                android:background="@drawable/button_orange"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:icon="@drawable/weekly"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeAskTextView"
                app:layout_constraintStart_toEndOf="@+id/btnDaily"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ondailyClicked"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:text="Daily"
                android:fontFamily="@font/alumnisans"
                android:background="@drawable/button_orange"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:icon="@drawable/daily"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@+id/recipeAskTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnWeekly"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_marginTop="15dp"
                android:text="Breakfast"
                android:fontFamily="@font/alumnisans"
                android:background="@drawable/button_orange"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:icon="@drawable/breakfast"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btnDaily"
                app:layout_constraintEnd_toStartOf="@+id/btnLunch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_marginTop="15dp"
                android:text="Lunch"
                android:fontFamily="@font/alumnisans"
                android:background="@drawable/button_orange"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:icon="@drawable/lunch"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@+id/btnDaily"
                app:layout_constraintStart_toEndOf="@+id/btnBreakfast"
                app:layout_constraintEnd_toStartOf="@+id/btnDinner"
                app:layout_constraintHorizontal_chainStyle="packed"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_marginTop="15dp"
                android:text="Dinner"
                android:fontFamily="@font/alumnisans"
                android:background="@drawable/button_orange"
                app:backgroundTint="@null"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:icon="@drawable/dinner"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btnDaily"
                app:layout_constraintStart_toEndOf="@+id/btnLunch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/btnBreakfast"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectedMealButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Meal"
            android:visibility="gone"
            android:fontFamily="@font/alumnisans"
            android:background="@drawable/button_orange"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:icon="@drawable/meal"
            app:iconGravity="textStart"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"/>

    </RelativeLayout>

</layout>