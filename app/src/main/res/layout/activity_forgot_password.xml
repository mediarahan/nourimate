<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background3">

    <ImageView
        android:id="@+id/Logoverif1"
        android:layout_width="459dp"
        android:layout_height="250dp"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/verificationcode1"
        android:src="@drawable/splash" />

    <ImageView
        android:id="@+id/wavelogin1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/wave_login"
        android:elevation="4dp"
        app:layout_constraintWidth_percent="1.2"
        app:layout_constraintBottom_toTopOf="@+id/verificationcode1"
        android:layout_marginBottom="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/waveloginshadow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/wave_login_with_shadow"
        android:elevation="2dp"
        app:layout_constraintWidth_percent="1.2"
        app:layout_constraintBottom_toTopOf="@+id/verificationcode1"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/verificationcode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Verification Code"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/verificationcode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abel"
        android:text="Choose your verification method\nto protect your account."
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/verificationcode1"
        app:layout_constraintEnd_toEndOf="@+id/verificationcode1"
        app:layout_constraintStart_toStartOf="@+id/verificationcode1"/>


    <TextView
        android:id="@+id/buttonVerifEmail"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:onClick="onVerifEmailClicked"
        android:text="Email"
        android:textStyle="bold"
        android:background="@drawable/buttonverifcode_with_shadow"
        android:elevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/alatsi"
        android:layout_marginTop="52dp"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintTop_toBottomOf="@+id/verificationcode2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/rectangleBar1"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rectangleBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <View
        android:id="@+id/rectangleBar2"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:background="#767373"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rectangleBar1"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>