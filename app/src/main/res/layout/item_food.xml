<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shape_menu"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="200dp">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="154dp"
        android:layout_height="20dp"
        android:text="Food Name"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/viewBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground"
        app:layout_constraintEnd_toStartOf="@+id/iv_recipe"
        app:layout_constraintTop_toTopOf="@+id/viewBackground"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/iv_recipe"
        android:layout_width="126dp"
        android:layout_height="126dp"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="resep a"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        app:layout_constraintStart_toEndOf="@id/viewBackground"/>

    <TextView
        android:id="@+id/tv_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="protein"
        android:paddingStart="16dp"
        app:layout_constraintStart_toEndOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_calories"/>

    <TextView
        android:id="@+id/tv_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fat"
        android:paddingStart="16dp"
        app:layout_constraintStart_toEndOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_protein"/>

    <TextView
        android:id="@+id/tv_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="carbs"
        android:paddingStart="16dp"
        app:layout_constraintStart_toEndOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/tv_fat"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>


    <Button
        android:id="@+id/btn_add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/viewBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground" />


</androidx.constraintlayout.widget.ConstraintLayout>
