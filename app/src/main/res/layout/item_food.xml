<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/shape_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/viewCircleBackground"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circlemix_shape_menu_history"
        app:layout_constraintEnd_toEndOf="@+id/viewBackground"
        app:layout_constraintTop_toTopOf="@+id/viewBackground" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textColor="@color/black"
        android:fontFamily="@font/barlowcondensedsemibold"
        android:textSize="18dp"
        android:maxLines="1"
        android:layout_marginStart="17dp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintEnd_toStartOf="@+id/viewCircleBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="18sp"/>

    <ImageView
        android:id="@+id/iv_recipe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@+id/viewCircleBackground"
        app:layout_constraintBottom_toBottomOf="@+id/viewCircleBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewCircleBackground"
        app:layout_constraintTop_toTopOf="@+id/viewCircleBackground" />

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="bahan resep here"
        android:fontFamily="@font/alumnisans"
        android:textSize="13sp"
        android:maxLines="10"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="17dp"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintEnd_toStartOf="@+id/viewCircleBackground" />

    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="protein"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_calories"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="carbs"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_protein"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fat"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_carbs"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_serves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="serves"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_fat"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <FrameLayout
        android:id="@+id/buttonMealAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_add_menu"
        android:elevation="3dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintEnd_toEndOf="@id/viewBackground">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabmealadded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_check_circle_24"
            app:tint="@null"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            android:padding="0dp"
            app:maxImageSize="30dp"
            app:pressedTranslationZ="0dp"
            android:layout_gravity="start|center_vertical" />

        <TextView
            android:id="@+id/addedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Added"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_gravity="end|center_vertical"
            android:fontFamily="@font/alumnisanssemibold"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/buttonAddMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rectangle_add_menu"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintEnd_toEndOf="@id/viewBackground">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabaddmeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_add_24"
            app:tint="@null"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            android:padding="0dp"
            app:maxImageSize="30dp"
            app:pressedTranslationZ="0dp"
            android:layout_gravity="start|center_vertical" />

        <TextView
            android:id="@+id/addtextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_gravity="end|center_vertical"
            android:fontFamily="@font/alumnisanssemibold"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>