<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_popup_editprofile"
    android:padding="16dp">

    <ImageView
        android:id="@+id/droparrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/arrow_drop" />

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_ruler_picker"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/droparrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="60"
        android:fontFamily="@font/abel"
        android:textColor="@color/color40"
        android:textSize="45sp" />

    <com.telyu.nourimate.custom.StraightRulerView
        android:id="@+id/straightRulerView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textViewNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="16sp"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/white"
        android:background="@drawable/button_popup"
        app:layout_constraintTop_toBottomOf="@id/straightRulerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        style="@style/MyMaterialButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
