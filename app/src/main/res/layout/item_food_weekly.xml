<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="280dp"
        android:layout_height="186dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/shape_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textColor="@color/black"
        android:fontFamily="@font/barlowcondensedsemibold"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/iv_recipe"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="bahan resep here"
        android:fontFamily="@font/alumnisans"
        android:textSize="13sp"
        android:maxLines="10"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintEnd_toStartOf="@id/iv_recipe"
        app:layout_constrainedWidth="true" />

    <TextView
        android:id="@+id/tv_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calories"
        android:textSize="14sp"
        android:layout_margin="12dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="protein"
        android:textSize="14sp"
        android:layout_margin="12dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_calories"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="carbs"
        android:textSize="14sp"
        android:layout_margin="12dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_protein"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

    <TextView
        android:id="@+id/tv_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fat"
        android:textSize="14sp"
        android:layout_margin="12dp"
        android:fontFamily="@font/alumnisans"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_carbs"
        app:layout_constraintStart_toEndOf="@id/viewBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>