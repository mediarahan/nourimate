<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Rectangle at the top -->
    <ImageView
        android:id="@+id/rectanglemenupage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rectangle_program_menupage"/>

    <!-- Rectangle filling the rest of the screen below the first rectangle -->
    <ImageView
        android:id="@+id/rectanglemenupage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_program_menupage2"
        android:layout_marginTop="70dp" />

    <!-- ImageButton for the menu icon positioned inside the first rectangle -->
    <ImageButton
        android:id="@+id/menuIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/menu"
        android:background="@null"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <!-- TextView for Program Setting aligned next to the ImageButton -->
    <TextView
        android:id="@+id/textViewProgramSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Setting"
        android:textSize="25dp"
        android:textColor="@color/color23"
        android:fontFamily="@font/alatsi"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"/>

    <!-- Button for Restore Program positioned below the first rectangle -->
    <TextView
        android:id="@+id/btnRestoreProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore Program"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/abel"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="30dp"/>

    <!-- Line below the Restore Program button -->
    <View
        android:id="@+id/linerestoreprogram"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="130dp" />

</FrameLayout>
