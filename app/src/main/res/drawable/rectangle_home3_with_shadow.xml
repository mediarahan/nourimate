<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rectangle_home2_with_shadow.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background rectangle -->
    <item android:id="@+id/rectangleShape">
        <shape android:shape="rectangle">
            <solid android:color="#FFF1C5" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp"/>
        </shape>
    </item>

    <!-- Shadow layer (diluar shape) -->
    <item  android:bottom="10dp"  android:drawable="@drawable/rectangle_home3">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp"/>
            <solid android:color="#D4CDBA" />
        </shape>
    </item>

</layer-list>