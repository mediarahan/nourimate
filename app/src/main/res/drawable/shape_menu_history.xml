<?xml version="1.0" encoding="utf-8"?>

<!-- res/drawable/shape_menu.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:id="@+id/shape_menu"
            android:shape="rectangle">
            <solid android:color="#D2EACE" />
            <size
                android:width="300dp"
                android:height="200dp" />
            <corners android:radius="30dp" /> <!-- Corner radius 15dp -->
        </shape>
    </item>
    <item
        android:left="204dp"
        android:top="15dp"
        android:right="20dp"
        android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#C3E1B9" />
            <corners
                android:topLeftRadius="90dp"
                android:topRightRadius="90dp"
                android:bottomLeftRadius="90dp"
                android:bottomRightRadius="90dp"
                />
        </shape>
    </item>

</layer-list>

