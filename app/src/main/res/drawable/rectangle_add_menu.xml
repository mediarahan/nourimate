<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rectangle_home2_with_shadow.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (diluar shape) -->
    <item  android:bottom="-1dp"  >
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp"/>
            <solid android:color="#D4CDBA" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <item>
        <shape android:id="@+id/shape_menu"
            android:shape="rectangle">
            <solid android:color="#C3E1B9" />
            <size
                android:width="10dp"
                android:height="10dp" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp"/>
        </shape>
    </item>

</layer-list>
