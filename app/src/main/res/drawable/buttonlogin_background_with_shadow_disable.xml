<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer (diluar shape) -->
    <item  android:bottom="-1dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/color26" />
        </shape>
    </item>

    <!-- Background rectangle -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/> <!-- Menyesuaikan radius untuk melengkungkan sudut -->
            <solid android:color="#FFFFFF"/> <!-- Warna tengah tombol putih -->
            <stroke android:width="2dp" android:color="@color/color26"/> <!-- Menyesuaikan lebar untuk ketebalan tepi oranye -->
        </shape>
    </item>

</layer-list>