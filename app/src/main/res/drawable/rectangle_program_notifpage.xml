<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C4B997"/>
            <corners android:topLeftRadius="20dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color42"/> <!-- White color -->
            <corners android:topLeftRadius="20dp"/> <!-- Match corner radius with the shadow -->
        </shape>
    </item>
</layer-list>
